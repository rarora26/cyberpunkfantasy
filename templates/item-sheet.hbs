<form class="cyberpunkfantasy item-sheet" autocomplete="off">
  <header class="sheet-header flexrow">
    <img class="item-img" src="{{item.img}}" data-edit="img" title="{{item.name}}" width="64" height="64"/>
    <h1 class="item-name"><input type="text" name="name" value="{{item.name}}" placeholder="Item Name"/></h1>
  </header>
  <section class="sheet-body">
    <div class="form-group">
      <label>Description</label>
      <textarea name="system.description" rows="8">{{system.description}}</textarea>
    </div>
    {{#if (eq type 'weapon')}}
    <div class="form-group">
      <label>Damage</label>
      <input type="text" name="system.damage" value="{{system.damage}}" placeholder="e.g. 1d8 P"/>
    </div>
    {{/if}}
    {{#if (eq type 'gun')}}
    <div class="form-group">
      <label>Range</label>
      <input type="text" name="system.range" value="{{system.range}}" placeholder="30 ft"/>
    </div>
    <div class="form-group">
      <label>Capacity</label>
      <input type="number" name="system.capacity" value="{{system.capacity}}" min="0"/>
    </div>
    {{/if}}
    <div class="form-group">
      <label>Level</label>
      <input type="number" name="system.level" value="{{system.level}}" min="0"/>
    </div>
    <div class="form-group">
      <label>Price (Cr)</label>
      <input type="number" name="system.price" value="{{system.price}}" min="0"/>
    </div>
    <div class="form-group">
      <label>Traits</label>
      <input type="text" name="system.traits" value="{{system.traits}}" placeholder="comma separated"/>
    </div>
  </section>
</form>